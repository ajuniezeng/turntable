# Generator Config, default location `~/.config/turntable/generator.toml`

# Template file, support local path or remote URL (required)
template = "./templates/1.13.json"
# template = "https://www.example.com/1.13.json"

# Output file path, default location `./out/config.json`
output = "./out/config.json"

# DNS strategy will be set to `ipv4_only`, remove all outbound whose host is IPv6 address
ipv4_only = false

# Target sing-box version, default to latest supported version, currently "1.13"
target_version = "1.13"

# Enable country code outbound selectors. Turntable will generate selectors based on country flags from outbound tags and insert these selectors to existing selectors from template, default to true
country_code_outbound_selectors = true

# List of country codes to include in selectors (e.g., ["US", "JP", "HK"])
# If empty or not specified, all country codes found in outbound tags will be included
# country_codes = ["US", "JP", "HK", "TW", "SG"]
country_codes = []

# Remove outbounds with detour tags, default to false
no_detour = false

# Create a detour selector with all non-detour outbounds and replace detour tags with this selector
# Only works when `no_detour` is false, default to false
detour_selector = false

# Cache every subscription as a single sing-box outbound format json file in `output` directory, default to false
cache_subscription = false
# Cache time to live. Unit: minutes. Will ignore when `cache_subscription` is false
cache_ttl = 60

# Show diff between newly fetched subscription and cached version, default to false
# When enabled, displays added/removed outbounds compared to the cached version
diff_subscription = false

# Automatically upload generated config files to cloud storage services that support WebDAV protocol
# Enable upload
webdav_upload = false
# WebDAV server URL
webdav_url = "https://example.com/dav"
# WebDAV authentication
webdav_username = "example"
webdav_password = "123456"
# Remote path where the config will be uploaded
upload_path = "/path/to/upload"

# Subscriptions (required - at least one)
[[subscriptions]]
name = "MyProvider"
url = "https://example.com/subscription-url"
# Optional filter to remove outbounds by index (0-based)
# E.g., filter = [0, 1, 2] removes the first, second, and third outbounds
# filter = [0, 1, 2]
